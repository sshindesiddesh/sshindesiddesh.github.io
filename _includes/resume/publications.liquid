<div class="card-text font-weight-light">
  {% assign publications = data[1] | sort: 'releaseDate' | reverse %}
  {% for content in publications %}
    <div class="mb-3">
      <div class="d-flex justify-content-between align-items-start">
        <div class="flex-grow-1">
          <div class="d-flex justify-content-between align-items-baseline mb-1">
            <h6 class="font-weight-bold mb-0">
              {% if content.url and content.url != '' %}
                <a href="{{ content.url }}" style="color: var(--global-theme-color); text-decoration: none;">{{ content.name }}</a>
              {% else %}
                {{ content.name }}
              {% endif %}
            </h6>
            {% if content.releaseDate and content.releaseDate != '' %}
              {% assign year = content.releaseDate | split: '-' | slice: 0 | first %}
              <span class="font-weight-bold text-muted" style="font-size: 0.85rem; white-space: nowrap;">{{ year }}</span>
            {% endif %}
          </div>
          {% if content.publisher and content.publisher != '' %}
            <div class="ml-3">
              <span class="font-weight-normal text-muted" style="font-size: 0.9rem;">{{ content.publisher }}</span>
            </div>
          {% endif %}
          {% if content.summary and content.summary != '' %}
            <div class="ml-3">
              <span class="font-weight-normal" style="font-size: 0.9rem; font-style: italic;">{{ content.summary }}</span>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
    {% unless forloop.last %}
      <hr style="margin: 1.5rem 0; border-color: #dee2e6;">
    {% endunless %}
  {% endfor %}
</div>
