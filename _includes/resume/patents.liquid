<div class="card-text font-weight-light">
  <ol class="mb-0">
    {% assign patents = data[1] | sort: 'date' | reverse %}
    {% for content in patents %}
      <li class="mb-2">
        <div class="d-flex justify-content-between align-items-start">
          <div class="flex-grow-1">
            <span class="font-weight-normal">{{ content.title }}</span>
          </div>
          <div class="text-right ml-3">
            {% if content.date %}
              <span class="text-muted" style="font-size: 0.9rem">({{ content.date }})</span>
            {% endif %}
          </div>
        </div>
      </li>
    {% endfor %}
  </ol>
</div>
