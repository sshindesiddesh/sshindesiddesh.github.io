<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign papers = data[1] %}
  {% for content in papers %}
    <li class="list-group-item">
      <div class="d-flex justify-content-between align-items-start mb-2">
        <div>
          <h6 class="title font-weight-bold mb-1">
            {% if content.url and content.url != '' %}
              <a href="{{ content.url }}" style="color: var(--global-theme-color); text-decoration: none;">{{ content.name }}</a>
            {% else %}
              {{ content.name }}
            {% endif %}
          </h6>
        </div>
        <div class="text-right">
          {% if content.releaseDate %}
            <span class="text-muted" style="font-size: 0.9rem">{{ content.releaseDate }}</span>
          {% endif %}
        </div>
      </div>
      {% if content.publisher %}
        <p class="text-muted font-italic mb-0" style="font-size: 0.9rem">{{ content.publisher }}</p>
      {% endif %}
    </li>
  {% endfor %}
</ul>
