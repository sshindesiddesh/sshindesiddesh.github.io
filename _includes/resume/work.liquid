<ul class="card-text font-weight-light list-group list-group-flush">
  {% assign work = data[1] | sort: 'startDate' | reverse %}
  {% for content in work %}
    <li class="list-group-item">
      <div class="d-flex justify-content-between align-items-start mb-2">
        <div>
          <h6 class="title font-weight-bold mb-1">{{ content.position }} - <span class="text-primary">{{ content.name }}</span></h6>
        </div>
        <div class="text-right">
          {% if content.startDate %}
            {% assign startDate = content.startDate | split: '-' | slice: 0, 2 | join: '.' %}
            {% assign endDate = content.endDate | split: '-' | slice: 0, 2 | join: '.' | default: 'Present' %}
            {% assign date = startDate | append: ' - ' %}
            {% assign date = date | append: endDate %}
            <span class="text-muted" style="font-size: 0.9rem">{{ date }}</span>
          {% endif %}
          {% if content.location %}
            <br><span class="text-muted" style="font-size: 0.85rem">{{ content.location }}</span>
          {% endif %}
        </div>
      </div>
      {% if content.summary %}
        <p class="text-muted font-italic mb-2" style="font-size: 0.9rem">{{ content.summary }}</p>
      {% endif %}
      {% if content.highlights %}
        <ul class="mb-0">
          {% for item in content.highlights %}
            <li class="mb-1">{{ item }}</li>
          {% endfor %}
        </ul>
      {% endif %}
    </li>
  {% endfor %}
</ul>
